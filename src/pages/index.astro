---
import Layout from '../layouts/Layout.astro'
import Social from "../components/Social.svelte"
---

<Layout title="🔗 pol.link | Links to anywhere you can find me online!">
  <main class="min-h-screen justify-center flex flex-col sm:gap-4 gap-4 text-center max-w-lg mx-auto prose dark:prose-invert prose-base py-8 sm:prose-xl">
    <section class="flex flex-col gap-2 items-center">
      <img
        class="m-0 mx-auto aspect-square w-44 rounded-full object-cover sm:m-0"
        src="/profile.jpg"
        alt="A memoji version of me on my laptop full of stickers."
      />
      <h1 class="m-0 sm:m-0">
        Hi! I'm Pol 👋
      </h1>
      <p class="m-0 mx-auto sm:m-0">
        Below you can find a collection of links 🔗 that will take you anywhere
        you can find me online! 🌍
      </p>
    </section>

      <section class="flex flex-col gap-3">
        <Social url="/blog" title="My blog" icon="/profile.png" background="bg-gray-900"/>
        <Social url="/newsletter" title="iOS CI Newsletter" icon="/ci-newsletter.svg" background="bg-cyan-800" />
        <Social url="/github" title="Check out my GH repos" icon="/github.svg" background="bg-black" />
        <Social url="/twitter" title="Follow me on Twitter" icon="/twitter.svg" background="bg-[#1DA1F2]" />
        <Social url="/linkedin" title="Let's connect on Linkedin" icon="/linkedin.svg" background="bg-[#0A66C2]" />
        <Social url="/mastodon" title="I'm on Mastodon too!" icon="/mastodon.svg" background="bg-[#6364FF]" />
        <Social url="/cv" title="Download my CV" icon="/download.svg" background="bg-red-800" />
      </section>
  </main>
</Layout>
